<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0">

  <!-- Allow the use of system properties -->
  <ext:property-placeholder placeholder-prefix="$[" placeholder-suffix="]" />

  <cm:property-placeholder persistent-id="environment" update-strategy="none">
    <cm:default-properties>
      <cm:property name="defaultDomain" value="intra.lan" />
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="daoManager" init-method="init" class="io.subutai.common.dao.DaoManager" activation="eager">
    <jpa:unit unitname="nodeRegistrationUnit" property="entityManagerFactory" />
  </bean>

  <bean id="registrationManager" scope="singleton" class="io.subutai.core.registration.impl.RegistrationManagerImpl"
        init-method="init">
    <argument ref="securityManagerRef" />
    <argument ref="daoManager" />
    <argument ref="networkRef" />
    <argument ref="localPeerRef" />
    <argument value="${defaultDomain}" />
  </bean>

  <service ref="registrationManager" interface="io.subutai.core.registration.api.RegistrationManager" />

  <reference id="securityManagerRef" availability="mandatory"
             interface="io.subutai.core.security.api.SecurityManager" />

  <reference id="localPeerRef" availability="mandatory"
             interface="io.subutai.common.peer.LocalPeer" />

  <reference id="networkRef" availability="mandatory"
             interface="io.subutai.core.network.api.NetworkManager" />

</blueprint>
