<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="communicationManager" availability="mandatory"
               interface="org.safehaus.subutai.api.communicationmanager.CommunicationManager"/>

    <reference id="commandRunner" availability="mandatory"
               interface="org.safehaus.subutai.api.commandrunner.CommandRunner"/>

    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.api.agentmanager.AgentManager"/>

    <bean id="fileTracker" class="org.safehaus.subutai.impl.filetracker.FileTrackerImpl"
          init-method="init" destroy-method="destroy" scope="singleton">
        <property name="commandRunner" ref="commandRunner"/>
        <property name="communicationManager" ref="communicationManager"/>
    </bean>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="file-tracker/test">
            <action class="org.safehaus.subutai.impl.filetracker.CliTest">
                <property name="agentManager" ref="agentManager"/>
                <property name="fileTracker" ref="fileTracker"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
