<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusNetworkManager">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <jaxrs:server address="/network" id="networkRestService">
    <jaxrs:serviceBeans>
      <ref component-id="networkRestServiceImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <bean id="networkRestServiceImpl" class="org.safehaus.subutai.core.network.rest.NetworkRestServiceImpl">
    <property name="networkManager" ref="networkManager" />
  </bean>

  <reference id="networkManager" availability="mandatory"
             interface="org.safehaus.subutai.core.network.api.NetworkManager" />

</blueprint>