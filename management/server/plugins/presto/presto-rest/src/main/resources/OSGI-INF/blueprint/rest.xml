<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">
  <cxf:bus id="cxfBusPresto">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <reference id="prestoManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.presto.api.Presto" />

  <bean id="prestoRestServiceImpl" class="org.safehaus.subutai.plugin.presto.rest.RestService">
    <property name="prestoManager" ref="prestoManager" />
  </bean>

  <jaxrs:server address="/presto" id="prestoRestService">
    <jaxrs:serviceBeans>
      <ref component-id="prestoRestServiceImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>
</blueprint>
