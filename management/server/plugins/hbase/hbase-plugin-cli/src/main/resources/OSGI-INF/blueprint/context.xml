<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >

    <reference id="hbaseManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.hbase.api.HBase"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="hbase/describe-cluster">
            <action class="org.safehaus.subutai.plugin.hbase.cli.DescribeClusterCommand">
                <property name="hbaseManager" ref="hbaseManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="hbase/list-clusters">
            <action class="org.safehaus.subutai.plugin.hbase.cli.ListHBaseClustersCommand">
                <property name="hbaseManager" ref="hbaseManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="hbase/uninstall-cluster">
            <action class="org.safehaus.subutai.plugin.hbase.cli.UninstallHBaseClusterCommand">
                <property name="hbaseManager" ref="hbaseManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="hbase/install-cluster">
            <action class="org.safehaus.subutai.plugin.hbase.cli.InstallHBaseClusterCommand">
                <property name="hbaseManager" ref="hbaseManager"/>
            </action>
        </command>
    </command-bundle>

</blueprint>