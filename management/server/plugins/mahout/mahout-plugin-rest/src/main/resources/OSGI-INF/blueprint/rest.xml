<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
            http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
            http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.agent.api.AgentManager" />

  <reference id="mahoutManager" availability="mandatory" interface="org.safehaus.subutai.plugin.mahout.api.Mahout" />

  <bean id="restService" class="org.safehaus.subutai.plugin.mahout.rest.RestServiceImpl">
    <property name="agentManager" ref="agentManager" />
    <property name="mahoutManager" ref="mahoutManager" />
  </bean>

  <jaxrs:server address="/mahout-plugin" id="mahoutRestService">
    <jaxrs:serviceBeans>
      <ref component-id="restService" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>
