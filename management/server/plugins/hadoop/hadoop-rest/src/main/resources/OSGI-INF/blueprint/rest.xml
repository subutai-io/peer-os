<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">
  <cxf:bus id="cxfBusHadoop">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>
  <jaxrs:server address="/hadoop" id="hadoopRestService">
    <jaxrs:serviceBeans>
      <ref component-id="hadoopRestServiceImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>
  <bean id="hadoopRestServiceImpl" class="org.safehaus.subutai.plugin.hadoop.rest.RestServiceImpl">
    <property name="hadoopManager" ref="hadoopManager" />
    <property name="environmentManager" ref="environmentManager" />
  </bean>
  <reference id="hadoopManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />
  <reference id="environmentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />

</blueprint>
