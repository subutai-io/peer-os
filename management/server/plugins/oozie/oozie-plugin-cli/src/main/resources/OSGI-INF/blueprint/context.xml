<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >

    <reference id="oozieManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.oozie.api.Oozie"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="oozie/list-clusters">
            <action class="org.safehaus.subutai.plugin.oozie.cli.ListClustersCommand">
                <property name="oozieManager" ref="oozieManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="oozie/uninstall-cluster">
            <action class="org.safehaus.subutai.plugin.oozie.cli.UninstallClusterCommand">
                <property name="oozieManager" ref="oozieManager"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
