#!/bin/bash 
set -e
FilePath="/etc/profile"

accumuloVersion=1.4.2
accumuloHome="/opt/accumulo-$accumuloVersion"
accumuloConf="/etc/accumulo"

if [[ "x$ACCUMULO_HOME" != "x" ]];
then
        accumuloHome=$ACCUMULO_HOME
fi

# Create symlink to configuration files and scripts
ln -s $accumuloConf/accumulo-env.sh $accumuloHome/conf/
ln -s $accumuloConf/accumulo-metrics.xml $accumuloHome/conf/
ln -s $accumuloConf/accumulo.policy.example $accumuloHome/conf/
ln -s $accumuloConf/accumulo-site.xml $accumuloHome/conf/
ln -s $accumuloConf/auditLog.xml $accumuloHome/conf/
ln -s $accumuloConf/gc $accumuloHome/conf/
ln -s $accumuloConf/generic_logger.xml $accumuloHome/conf/
ln -s $accumuloConf/log4j.properties $accumuloHome/conf/
ln -s $accumuloConf/masters $accumuloHome/conf/
ln -s $accumuloConf/monitor_logger.xml $accumuloHome/conf/
ln -s $accumuloConf/slaves $accumuloHome/conf/
ln -s $accumuloConf/tracers $accumuloHome/conf/

if [ "x$JAVA_HOME" = "x" ];
then
	$accumuloHome/bin/accumulo-property.sh JAVA_HOME /usr/lib/jvm/java-1.7.0-openjdk-amd64
else
	$accumuloHome/bin/accumulo-property.sh JAVA_HOME $JAVA_HOME 
fi

if [ "x$HADOOP_HOME" = "x" ];
then
	$accumuloHome/bin/accumulo-property.sh HADOOP_HOME /opt/hadoop-1.2.1
else
        $accumuloHome/bin/accumulo-property.sh HADOOP_HOME $HADOOP_HOME
fi

if [ "x$ZOOKEEPER_HOME" = "x" ];
then
        $accumuloHome/bin/accumulo-property.sh ZOOKEEPER_HOME /opt/zookeeper-3.4.5
else
        $accumuloHome/bin/accumulo-property.sh ZOOKEEPER_HOME $ZOOKEEPER_HOME
fi

if [ "x$ACCUMULO_LOG_DIR" = "x" ];
then
        $accumuloHome/bin/accumulo-property.sh ACCUMULO_LOG_DIR $accumuloHome/log
else
        $accumuloHome/bin/accumulo-property.sh ACCUMULO_LOG_DIR $ACCUMULO_LOG_DIR
fi

